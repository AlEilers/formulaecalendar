<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/details_results_padding_top">

    <TextView
        android:id="@+id/team_pos"
        android:layout_width="@dimen/details_results_pos_width"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingRight="@dimen/details_results_pos_size"
        android:paddingTop="@dimen/details_results_padding_top"
        android:text="12"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Driver Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#FF000000" />

    <TextView
        android:id="@+id/team_points"
        android:layout_width="@dimen/driver_rasults_points_width"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingRight="@dimen/details_results_pos_size"
        android:paddingTop="@dimen/details_results_padding_top"
        android:text="123 P."
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp" />

</LinearLayout>