<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.ae.formulaecalendar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="ManifestResource">

        <!-- Main -->
        <activity android:name=".app.view.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <!-- Details -->
        <activity
            android:name=".app.view.details.DetailsActivity"
            android:parentActivityName=".app.view.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.view.main.MainActivity" />
        </activity>

        <!-- -Preference -->
        <activity
            android:name=".app.view.settings.MyPreferenceActivity"
            android:parentActivityName=".app.view.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.view.main.MainActivity" />
        </activity>

        <!-- About -->
        <activity
            android:name=".app.view.about.AboutActivity"
            android:parentActivityName=".app.view.settings.MyPreferenceActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.view.settings.MyPreferenceActivity" />

            <intent-filter>
                <action android:name="de.ae.formulaecalendar.view.about.AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Notification -->
        <service
            android:name=".app.notification.NotificationService"
            android:exported="false" />

        <receiver android:name=".app.notification.NotificationReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Widgets -->
        <receiver android:name=".app.widget.BrightCountdownWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/countdown_widget_bright_info" />
        </receiver>
        <receiver android:name=".app.widget.DarkCountdownWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/countdown_widget_dark_info" />
        </receiver>
    </application>

</manifest>